{
    "name": "Helvetica",
    "version": "2.0.0",
    "author": "Perspecta",
    "description": "Classic Helvetica typography with Swiss design principles",
    "fonts": {
        "title": {
            "name": "Helvetica",
            "css": "Helvetica Neue, Helvetica, Arial, sans-serif"
        },
        "body": {
            "name": "Helvetica",
            "css": "Helvetica Neue, Helvetica, Arial, sans-serif"
        }
    },
    "cssClasses": "fixed-size-headings",
    "presets": {
        "light": {
            "text": {
                "h1": [
                    "#000000"
                ],
                "h2": [
                    "#000000"
                ],
                "h3": [
                    "#1a1a1a"
                ],
                "h4": [
                    "#1a1a1a"
                ],
                "body": "#333333",
                "header": "#666666",
                "footer": "#666666"
            },
            "backgrounds": {
                "general": {
                    "type": "solid",
                    "color": "#ffffff"
                },
                "cover": {
                    "type": "solid",
                    "color": "#f5f5f5"
                },
                "title": {
                    "type": "solid",
                    "color": "#ffffff"
                },
                "section": {
                    "type": "solid",
                    "color": "#000000"
                }
            },
            "accents": [
                "#000000",
                "#e63946",
                "#f4a261",
                "#2a9d8f",
                "#264653",
                "#e9c46a"
            ]
        },
        "dark": {
            "text": {
                "h1": [
                    "#ffffff"
                ],
                "h2": [
                    "#ffffff"
                ],
                "h3": [
                    "#e0e0e0"
                ],
                "h4": [
                    "#e0e0e0"
                ],
                "body": "#cccccc",
                "header": "#888888",
                "footer": "#888888"
            },
            "backgrounds": {
                "general": {
                    "type": "solid",
                    "color": "#000000"
                },
                "cover": {
                    "type": "solid",
                    "color": "#1a1a1a"
                },
                "title": {
                    "type": "solid",
                    "color": "#000000"
                },
                "section": {
                    "type": "solid",
                    "color": "#ffffff"
                }
            },
            "accents": [
                "#ffffff",
                "#e63946",
                "#f4a261",
                "#2a9d8f",
                "#264653",
                "#e9c46a"
            ]
        }
    }
}