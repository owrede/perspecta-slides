{
  "name": "Berlin",
  "version": "2.0.0",
  "author": "Perspecta",
  "description": "Professional theme with deep blue tones",
  "fonts": {
    "title": {
      "name": "Source Sans Pro",
      "css": "Source Sans Pro, Roboto, system-ui, sans-serif"
    },
    "body": {
      "name": "Source Sans Pro",
      "css": "Source Sans Pro, Roboto, system-ui, sans-serif"
    }
  },
  "cssClasses": "variable-size-headings",
  "presets": {
    "light": {
      "text": {
        "h1": [
          "#1a365d"
        ],
        "h2": [
          "#1a365d"
        ],
        "h3": [
          "#2c5282"
        ],
        "h4": [
          "#2c5282"
        ],
        "body": "#2d3748",
        "header": "#4a5568",
        "footer": "#4a5568"
      },
      "backgrounds": {
        "general": {
          "type": "solid",
          "color": "#ffffff"
        },
        "cover": {
          "type": "gradient",
          "colors": [
            "#1a365d",
            "#2c5282"
          ]
        },
        "title": {
          "type": "solid",
          "color": "#f7fafc"
        },
        "section": {
          "type": "solid",
          "color": "#1a365d"
        }
      },
      "accents": [
        "#1a365d",
        "#2c5282",
        "#3182ce",
        "#63b3ed",
        "#e53e3e",
        "#38a169"
      ]
    },
    "dark": {
      "text": {
        "h1": [
          "#ffffff"
        ],
        "h2": [
          "#ffffff"
        ],
        "h3": [
          "#e2e8f0"
        ],
        "h4": [
          "#e2e8f0"
        ],
        "body": "#f7fafc",
        "header": "#a0aec0",
        "footer": "#a0aec0"
      },
      "backgrounds": {
        "general": {
          "type": "solid",
          "color": "#1a365d"
        },
        "cover": {
          "type": "gradient",
          "colors": [
            "#1a365d",
            "#2c5282"
          ]
        },
        "title": {
          "type": "solid",
          "color": "#1a365d"
        },
        "section": {
          "type": "solid",
          "color": "#63b3ed"
        }
      },
      "accents": [
        "#63b3ed",
        "#2c5282",
        "#3182ce",
        "#1a365d",
        "#e53e3e",
        "#38a169"
      ]
    }
  }
}