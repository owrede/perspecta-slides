{
  "name": "perspecta-slides",
  "version": "0.2.23",
  "description": "An Obsidian plugin for creating beautiful presentations from Markdown",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs && npm run copy",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "copy": "cp main.js preload.js manifest.json styles.css \"/Users/wrede/Documents/Obsidian Vaults/Perspecta-Dev/.obsidian/plugins/perspecta-slides/\"",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md,css}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "presentation",
    "slides",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pako": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.56.0",
    "obsidian": "latest",
    "prettier": "^3.1.1",
    "tslib": "2.6.2",
    "typescript": "5.3.2"
  },
  "dependencies": {
    "@excalidraw/utils": "^0.1.3-test32",
    "lz-string": "^1.5.0",
    "pako": "^2.1.0"
  }
}
