{
  "name": "Kyoto",
  "version": "2.0.0",
  "author": "Perspecta",
  "description": "Dynamic gradient theme with soft pastel colors",
  "fonts": {
    "title": {
      "name": "System",
      "css": "system-ui, -apple-system, sans-serif"
    },
    "body": {
      "name": "System",
      "css": "system-ui, -apple-system, sans-serif"
    }
  },
  "cssClasses": "variable-size-headings",
  "presets": {
    "light": {
      "text": {
        "h1": [
          "#000000"
        ],
        "h2": [
          "#000000"
        ],
        "h3": [
          "#333333"
        ],
        "h4": [
          "#333333"
        ],
        "body": "#000000",
        "header": "#666666",
        "footer": "#666666"
      },
      "backgrounds": {
        "general": {
          "type": "dynamic",
          "colors": [
            "#F2C7CF",
            "#F6C8A8",
            "#F3EFE4",
            "#CFE2B3",
            "#B8D8C8",
            "#BFD2E6"
          ]
        },
        "cover": {
          "type": "gradient",
          "colors": [
            "#F2C7CF",
            "#B8D8C8"
          ]
        },
        "title": {
          "type": "gradient",
          "colors": [
            "#BFD2E6",
            "#F2C7CF"
          ]
        },
        "section": {
          "type": "solid",
          "color": "#F3EFE4"
        }
      },
      "accents": [
        "#8F2C24",
        "#2F6F5E",
        "#A88F2D",
        "#4F6B3A",
        "#C24A2A",
        "#1F3B5C"
      ]
    },
    "dark": {
      "text": {
        "h1": [
          "#ffffff"
        ],
        "h2": [
          "#ffffff"
        ],
        "h3": [
          "#e6e6e6"
        ],
        "h4": [
          "#e6e6e6"
        ],
        "body": "#ffffff",
        "header": "#cccccc",
        "footer": "#cccccc"
      },
      "backgrounds": {
        "general": {
          "type": "dynamic",
          "colors": [
            "#8F2C24",
            "#C24A2A",
            "#A88F2D",
            "#4F6B3A",
            "#2F6F5E",
            "#1F3B5C"
          ]
        },
        "cover": {
          "type": "gradient",
          "colors": [
            "#8F2C24",
            "#1F3B5C"
          ]
        },
        "title": {
          "type": "gradient",
          "colors": [
            "#2F6F5E",
            "#8F2C24"
          ]
        },
        "section": {
          "type": "solid",
          "color": "#1F3B5C"
        }
      },
      "accents": [
        "#F2C7CF",
        "#B8D8C8",
        "#F6C8A8",
        "#CFE2B3",
        "#F3EFE4",
        "#BFD2E6"
      ]
    }
  }
}