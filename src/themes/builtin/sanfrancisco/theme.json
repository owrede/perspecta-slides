{
    "name": "San Francisco",
    "version": "2.0.0",
    "author": "Perspecta",
    "description": "Modern tech-inspired theme with clean lines",
    "fonts": {
        "title": {
            "name": "SF Pro Display",
            "css": "SF Pro Display, -apple-system, system-ui, sans-serif"
        },
        "body": {
            "name": "SF Pro Text",
            "css": "SF Pro Text, -apple-system, system-ui, sans-serif"
        }
    },
    "cssClasses": "variable-size-headings",
    "presets": {
        "light": {
            "text": {
                "h1": [
                    "#1d1d1f"
                ],
                "h2": [
                    "#1d1d1f"
                ],
                "h3": [
                    "#2d2d2f"
                ],
                "h4": [
                    "#2d2d2f"
                ],
                "body": "#3d3d3f",
                "header": "#6e6e73",
                "footer": "#6e6e73"
            },
            "backgrounds": {
                "general": {
                    "type": "solid",
                    "color": "#ffffff"
                },
                "cover": {
                    "type": "gradient",
                    "colors": [
                        "#007aff",
                        "#5856d6"
                    ]
                },
                "title": {
                    "type": "solid",
                    "color": "#f5f5f7"
                },
                "section": {
                    "type": "solid",
                    "color": "#1d1d1f"
                }
            },
            "accents": [
                "#007aff",
                "#5856d6",
                "#ff2d55",
                "#ff9500",
                "#34c759",
                "#5ac8fa"
            ]
        },
        "dark": {
            "text": {
                "h1": [
                    "#f5f5f7"
                ],
                "h2": [
                    "#f5f5f7"
                ],
                "h3": [
                    "#e5e5e7"
                ],
                "h4": [
                    "#e5e5e7"
                ],
                "body": "#d1d1d6",
                "header": "#8e8e93",
                "footer": "#8e8e93"
            },
            "backgrounds": {
                "general": {
                    "type": "solid",
                    "color": "#1d1d1f"
                },
                "cover": {
                    "type": "gradient",
                    "colors": [
                        "#0a84ff",
                        "#5e5ce6"
                    ]
                },
                "title": {
                    "type": "solid",
                    "color": "#1d1d1f"
                },
                "section": {
                    "type": "solid",
                    "color": "#0a84ff"
                }
            },
            "accents": [
                "#0a84ff",
                "#5e5ce6",
                "#ff375f",
                "#ff9f0a",
                "#30d158",
                "#64d2ff"
            ]
        }
    }
}